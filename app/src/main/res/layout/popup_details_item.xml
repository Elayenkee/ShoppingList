<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp">
    
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp">

        <TextView
            android:id="@+id/popupDetailsProductTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:textStyle="bold"
            android:textColor="@color/second"/>

        <LinearLayout
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/popupDetailsItemMinus"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="false"
                    android:padding="10dp"
                    android:src="@drawable/minus"
                    android:background="@drawable/button_round_background_simple"
                    android:contentDescription="@string/popup_details_produit_bouton_moins"
                    app:tint="@color/second"/>

            </FrameLayout>

            <TextView
                android:id="@+id/popupDetailsProductTxtNb"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/second"/>

            <FrameLayout
                android:id="@+id/popupDetailsItemPlus"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="false"
                    android:padding="10dp"
                    android:src="@drawable/plus"
                    android:background="@drawable/button_round_background_simple"
                    android:contentDescription="@string/popup_details_produit_bouton_plus"
                    app:tint="@color/second"/>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>