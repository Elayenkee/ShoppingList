<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp">
    
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="@string/fini"/>

        <FrameLayout
            android:id="@+id/PopupShoppingFinishedBtnContinuer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:elevation="5dp"
            android:contentDescription="@string/bouton_continuer"
            android:background="@drawable/button_round_background">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:text="@string/continuer"
                    android:textSize="20sp"
                    android:fontFamily="@font/main"/>

            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/PopupShoppingFinishedBtnQuitter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:elevation="5dp"
            android:contentDescription="@string/bouton_quitter"
            android:background="@drawable/button_round_background">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:text="@string/quitter"
                    android:textSize="20sp"
                    android:fontFamily="@font/main"/>

            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>