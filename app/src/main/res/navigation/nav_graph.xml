<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <!-- START -->
    <fragment
        android:id="@+id/startFragment"
        android:name="fr.alemanflorian.shoppinglist.presentation.start.fragment.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_start">

        <action
            android:id="@+id/action_start_to_home"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_start_to_shopping"
            app:destination="@id/ShoppingFragment" />

    </fragment>

    <!-- HOME -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="fr.alemanflorian.shoppinglist.presentation.home.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_shopping"
            app:destination="@id/ShoppingFragment" />

        <action
            android:id="@+id/action_home_to_listes"
            app:destination="@id/ListesFragment" />

    </fragment>

    <!-- PRODUCT -->
    <fragment
        android:id="@+id/productFragment"
        android:name="fr.alemanflorian.shoppinglist.presentation.product.fragment.ProductFragment"
        android:label="ProductFragment"
        tools:layout="@layout/fragment_product">

        <argument
            android:name="product"
            app:argType="fr.alemanflorian.shoppinglist.domain.entity.Product"
            app:nullable="false" />

    </fragment>

    <!-- CREATE PRODUCT -->
    <fragment
        android:id="@+id/productCreateFragment"
        android:name="fr.alemanflorian.shoppinglist.presentation.product.fragment.ProductCreateFragment"
        android:label="ProductCreateFragment"
        tools:layout="@layout/fragment_product_create">

        <action
            android:id="@+id/action_product_create_to_home"
            app:destination="@id/homeFragment" />

    </fragment>

    <!-- SHOPPING -->
    <fragment
        android:id="@+id/ShoppingFragment"
        android:name="fr.alemanflorian.shoppinglist.presentation.shopping.fragment.ShoppingFragment"
        android:label="ShoppingFragment"
        tools:layout="@layout/fragment_shopping">


    </fragment>

    <!-- LISTES -->
    <fragment
        android:id="@+id/ListesFragment"
        android:name="fr.alemanflorian.shoppinglist.presentation.listes.fragment.ListesFragment"
        android:label="ListesFragment"
        tools:layout="@layout/fragment_listes">

        <action
            android:id="@+id/action_listes_to_product"
            app:destination="@id/productFragment" />

        <action
            android:id="@+id/action_listes_to_shopping"
            app:destination="@id/ShoppingFragment" />

        <argument
            android:name="firstTime"
            app:argType="boolean"
            app:nullable="false" />

    </fragment>

</navigation>